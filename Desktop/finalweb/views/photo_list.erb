<div id="background">
  <img src="a.jpg" class="stretch" />
</div>

<h1> Album: <%= @album.name %></h1>


<% @all_photos.each do |photo| %>
<p>
  <img src = '<%= photo.picture %>' />
  <%= 'The story about this picture:'%>
  <%= photo.description %>
  <%= 'This photo is taken on:'%>
  <%= photo.date %>
</p>
<% end %>

<div class="panel">
  <div class="panel-body">
    <form class="addphotoform" action="/new_photo" method='POST' style='center'>
      <h4 class="list-group-item-heading">Add a new photo:</h4>

      <div class="form-group">
        <input class="form-control" type='text' name='picture' placeholder='Write down the URL.' />
      </div>
      <div class="form-group">
        <input class="form-control" type='text' name='description' placeholder='Describe the photo.' />
      </div>
      <div class="form-group">
        <input class="form-control" type='text' name='date' placeholder='When was it taken?' />
      </div>

      <button type='submit' class="btn btn-primary">Save</button>
    </form>
  </div>
</div>

<p>
  <a href="/logout" class="btn btn-default">logout</a>
  <a href="/" class="btn btn-warning">To change the background</a>
  <a href="/" class="btn btn-danger">Click: Going back to album lists!</a>
</p>
