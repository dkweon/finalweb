<h1><%= @user.name %>'s albums!</h1>

<% @all_albums.each do |album| %>
<p>
  <form class="form-inline" role="form">
    <div class="form-group">

      <table id="t1">

        <tr>
          <th rowspan="2">
            <!-- picture -->
            <a href= '/<%= album.id %>' ><img src = '<%= album.picture %>' class="container1"/></a>
          </th>
          <td width="500px" height="50px" >


            <!-- share the album with... -->
            <form class="form-inline" action="/new_album_member?id=<%= album.id %>" method="POST">
              <% album_users = ''%>
              <div class="form-group">
                <label>Share album with:</label>
                <input type='text' class="form-control" name='username' value="<%= album_users%>" placeholder='Type User Name'>
              </div>
              <button type="submit" class="btn btn-success">Share now!</button>

            </form>
          </td>
        </tr>
        <tr>
          <td>
            <!-- shared user list
            <%= 'Members:'%>
            <% album.users.each do |user| %>
            <%= user.name + ' '%> -->
          </td>
        </tr>
        <tr>
          <th>
            <!-- album name -->
              <center><a class="btn btn-default" href='/<%= album.id %>' role="button">"<%= album.name %>"</a></center>
          </th>
          <td align="right">
            <!-- delete album -->
            <form action= '/delete/<%= album.id %>' style='display:inline'>
              <button type= 'submit' class="btn btn-danger">Delete this Album</button>
            </form>

          </td>
        </tr>

      </table>
    </div>
  </form>
</p>

<% end %>
<% end %>



